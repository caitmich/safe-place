<% require 'amadeus' %>

<!-- nav -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <div class="container-fluid">
      <h1><a class="navbar-brand" href="#">Safe Places</a></h1>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="#">Search Places</a>
          <a class="nav-link" href="#">My Saved Places</a>
        </div>
      </div>
    </div>
  </nav>

<div class="row mx-5 mt-3">
  <p>Please enter the <strong>latitude</strong> and <strong>longitude</strong> of your desired destination. <br>
    If you need some <em>inspiration</em>, click on one of the cities below to view their safety ratings</p>
</div>
<div class="row">
<div class="col-2">

</div>
<div class="mt-5 text-center w-50 d-flex align-items-center col-3">

  <%= bootstrap_form_with url: "/", method: :get do |form| %>
    <%= form.text_field :latitude %>
    <%= form.text_field :longitude %>
    <%= form.submit "Search"%>
  <% end %>

</div>

<div class="mx-5 mt-3">
  <div>
    <h5>Barcelona</h5>
    <a href="/results"> View Safety Values</a>
  </div>
</div>
